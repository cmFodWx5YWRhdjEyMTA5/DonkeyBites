<atlassian-plugin key="${project.groupId}.${project.artifactId}"
	name="${project.name}" plugins-version="2">
	<plugin-info>
		<description>Create pull requests for staging branches and call to Sandbox flow on approve Event</description>
		<version>${project.version}</version>
		<vendor name="ALU Automation" url="${project.organization.url}" />

	</plugin-info>
	<component key="SandBoxTrigger"
		class="com.alu.automation.stash.merge.SandBoxTrigger">
		<description>When PullReqest is approved this trigger calls Sandbox job on jenkins 
		</description>
	</component>
	<repository-hook key="CreatePullRequest" name="Create Pull Request on push"
		class="com.alu.automation.stash.hook.CreatePullRequestRepositoryHook">
		<description>Creates pull request when pushed to branches with pattern _stg_
		</description>
	</repository-hook>
	<component-import key="pullRequestService"
		interface="com.atlassian.stash.pull.PullRequestService" />
	<component-import key="userService"
		interface="com.atlassian.stash.user.UserService" />
    <component-import key="applicationPropertiesService" interface="com.atlassian.stash.server.ApplicationPropertiesService"/>
		
	


</atlassian-plugin>